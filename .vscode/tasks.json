{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build com warnings",
            "type": "shell",
            "command": "g++",
            "args": [
                "-Wall",
                "-Wextra",
                "-pedantic",
                "-O2",
                "-I./src/headers",
                "./src/*.cpp",
                "./src/utils/*.cpp",
                "./src/area/*.cpp",
                "./src/regions/*.cpp",
                "-o",
                "./build/main",
                "-lIrrlicht"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}
